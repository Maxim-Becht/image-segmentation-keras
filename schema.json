{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "cfg_header": {
      "type": "object",
      "default": {},
      "properties": {
        "version": {
          "type": "object",
          "default": {},
          "properties": {
            "major": {
              "type": "integer",
              "default": 1
            },
            "minor": {
              "type": "integer",
              "default": 0
            },
            "bug_fix": {
              "type": "integer",
              "default": 0
            }
          },
          "required": [
            "major",
            "minor",
            "bug_fix"
          ]
        },
        "model": {
          "type": "string"
        },
        "dataset": {
          "type": "object",
          "properties": {
            "current": {
              "type": "string"
            },
            "history": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "dataset": {
                      "type": "string"
                    },
                    "cfg_file": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "dataset",
                    "cfg_file"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "dataset": {
                      "type": "string"
                    },
                    "cfg_file": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "dataset",
                    "cfg_file"
                  ]
                }
              ]
            }
          },
          "required": [
            "current"
          ]
        },
        "date": {
          "type": "object",
          "properties": {
            "created": {
              "type": "string"
            },
            "last_changed": {
              "type": "string"
            }
          },
          "required": [
            "created",
            "last_changed"
          ]
        }
      },
      "required": [
        "version",
        "model",
        "dataset",
        "date"
      ]
    },
    "model_name": {
      "type": "string"
    },
    "n_classes": {
      "type": "integer"
    },
    "input_height": {
      "type": "integer"
    },
    "input_width": {
      "type": "integer"
    },
    "ignore_zero_class": {
      "type": "boolean",
      "default": false
    },
    "verify_dataset": {
      "type": "boolean",
      "default": true
    },
    "checkpoints_path": {
      "type": "string"
    },
    "read_image_type": {
      "type": "integer",
      "default": 1
    },
    "training": {
      "type": "object",
      "default": {},
      "properties": {
        "train_images": {
          "type": "string"
        },
        "train_annotations": {
          "type": "string"
        },
        "epochs": {
          "type": "integer",
          "default": 5
        },
        "steps_per_epoch": {
          "type": "integer",
          "default": 512
        },
        "batch_size": {
          "type": "integer",
          "default": 2
        },
        "optimizer_name": {
          "type": "string",
          "default": "adam"
        },
        "auto_resume_checkpoint": {
          "type": "boolean",
          "default": false
        },
        "load_weights": {
          "default": null
        },
        "do_augment": {
          "type": "boolean",
          "default": false
        },
        "augmentation_name": {
          "default": null
        },
        "enable_tensorboard": {
          "type": "boolean",
          "default": false
        },
        "callbacks": {
          "default": null
        },
        "custom_augmentation": {
          "default": null
        },
        "other_inputs_paths": {
          "default": null
        },
        "preprocessing": {
          "default": null
        },
        "read_image_type": {
          "type": "integer",
          "default": 1
        },
        "validate": {
          "type": "boolean",
          "default": false
        },
        "validation": {
          "type": "object",
          "default": {},
          "properties": {
            "val_images": {
              "type": "string"
            },
            "val_annotations": {
              "type": "string"
            },
            "val_steps_per_epoch": {
              "type": "integer",
              "default": 512
            },
            "val_batch_size": {
              "type": "integer",
              "default": 2
            },
            "gen_use_multiprocessing": {
              "type": "boolean",
              "default": false
            }
          },
          "required": [
            "val_images",
            "val_annotations"
          ]
        }
      },
      "required": [
        "train_images",
        "train_annotations"
      ]
    },
    "testing": {
      "type": "object",
      "default": {},
      "properties": {
        "evaluation": {
          "type": "object",
          "default": {},
          "properties": {
            "checkpoints_path": {
              "type": "string"
            },
            "images_path": {
              "type": "string"
            },
            "segs_path": {
              "type": "string"
            },
            "read_image_type": {
              "type": "integer",
              "default": 1
            }
          },
          "required": [
            "images_path",
            "segs_path"
          ]
        },
        "prediction": {
          "type": "object",
          "default": {},
          "properties": {
            "checkpoints_path": {
              "type": "string"
            },
            "input_path": {
              "type": "string"
            },
            "output_path": {
              "type": "string"
            },
            "prediction_width": {
              "type": "integer",
              "default": -1
            },
            "prediction_height": {
              "type": "integer",
              "default": -1
            },
            "overlay_img": {
              "type": "boolean",
              "default": false
            },
            "show_legends": {
              "type": "boolean",
              "default": false
            },
            "class_names": {
              "type": "array",
              "default": null,
              "items": [
                {
                  "type": "string"
                }
              ]
            },
            "colors": {
              "type": "array",
              "default": null,
              "items": [
                {
                  "type": "array",
                  "default": null,
                  "items": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "integer"
                    },
                    {
                      "type": "integer"
                    }
                  ]
                }
              ]
            },
            "read_image_type": {
              "type": "integer",
              "default": 1
            }
          },
          "required": [
            "input_path",
            "output_path"
          ]
        }
      },
      "required": [
        "evaluation",
        "prediction"
      ]
    },
    "preparation": {
      "type": "object",
      "default":{},
      "properties": {
        "verification": {
          "type": "object",
          "default":{},
          "properties": {
            "show_all_errors": {
              "type": "boolean",
              "default": false
            },
            "datasets": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "desc": {
                      "type": "string"
                    },
                    "images_path": {
                      "type": "string"
                    },
                    "segs_path": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "desc",
                    "images_path",
                    "segs_path"
                  ]
                }
              ]
            }
          },
          "required": [
            "datasets"
          ]
        },
        "visualisation": {
          "type": "object",
          "default": {},
          "properties": {
            "do_augment": {
              "type": "boolean",
              "default": false
            },
            "augment_name": {
              "type": "string",
              "default": "aug_all"
            },
            "custom_aug": {
              "default": null
            },
            "ignore_non_matching": {
              "type": "boolean",
               "default": false
            },
            "no_show": {
              "type": "boolean",
              "default": false
            },
            "image_size": {
              "type": "array",
              "items": [
                {
                  "type": "integer"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "datasets": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "desc": {
                      "type": "string"
                    },
                    "images_path": {
                      "type": "string"
                    },
                    "segs_path": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "desc",
                    "images_path",
                    "segs_path"
                  ]
                }
              ]
            }
          },
          "required": [
            "datasets"
          ]
        }
      },
      "required": [
        "verification",
        "visualisation"
      ]
    }
  },
  "required": [
    "cfg_header",
    "model_name",
    "n_classes",
    "input_height",
    "input_width",
    "checkpoints_path",
    "training",
    "testing",
    "preparation"
  ]
}